{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "../../typings/",
      "node"
    ],
    "paths": {
      "@": [
        "./src"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true, //启用装饰器
    "emitDecoratorMetadata": true, //启用装饰器提供元数据的支持
    "downlevelIteration": true, //启用扩展运算符
  },
  "include": [
    "**/*.ts"
  ]
}
